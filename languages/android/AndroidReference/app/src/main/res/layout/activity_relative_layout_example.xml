<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#BBBBBB">

    <Button
        android:text="Top Left"
        android:id="@+id/b1"
        android:layout_height="150dp"
        android:layout_width="wrap_content"></Button>

    <Button
        android:text="Top Middle"
        android:layout_height="150dp"
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"></Button>

    <Button
        android:text="Top Right"
        android:layout_height="150dp"
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"></Button>

    <Button
        android:text="Mid Left"
        android:layout_height="150dp"
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/b5"
        android:layout_centerVertical="true"></Button>

    <Button
        android:text="Middle"
        android:layout_height="150dp"
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"></Button>

    <Button
        android:text="Mid Right"
        android:layout_height="150dp"
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/b5"
        android:layout_centerVertical="true"></Button>

    <Button
        android:text="Bottom Row"
        android:layout_height="150dp"
        android:id="@+id/b7"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"></Button>

</RelativeLayout>
